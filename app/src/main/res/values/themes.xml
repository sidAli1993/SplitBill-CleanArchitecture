<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MiddlewareApp" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MiddlewareApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/custom_ratingbar_selector</item>
    </style>

    <style name="RatingBar" parent="android:style/Widget.Material.RatingBar.Indicator">
        <!--        <item name="colorControlNormal">@color/white</item>-->
        <item name="colorControlActivated">@color/cal_blue_color</item>
    </style>

    <style name="checkBoxStyle" parent="Base.Theme.AppCompat">
        <item name="colorAccent">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="LoginTextInputLayoutStyle" parent="Theme.AppCompat">
        <item name="boxStrokeColor">@color/btn_pass_gray</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="hintTextColor">@color/btn_pass_gray</item>
        <item name="android:tint">@color/btn_pass_gray</item>
        <item name="colorAccent">@color/btn_pass_gray</item>
        <item name="colorControlNormal">@color/btn_pass_gray</item>
        <item name="colorControlActivated">@color/btn_pass_gray</item>

    </style>

</resources>